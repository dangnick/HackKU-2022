<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HatActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <GridLayout
            android:id="@+id/hatGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:gravity="center"
            android:orientation="vertical"
            android:rowOrderPreserved="true">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:contentDescription="yes"
                android:scaleType="fitCenter"
                android:src="@drawable/flatbill_hat" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:contentDescription="yes"
                android:scaleType="fitCenter"
                android:src="@drawable/cowboy_hat" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:contentDescription="yes"
                android:scaleType="fitCenter"
                android:src="@drawable/mario_hat" />

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="0"
                android:layout_margin="5dp"
                android:contentDescription="yes"
                android:scaleType="fitCenter"
                android:src="@drawable/mission_cooling_hat" />
        </GridLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:text="Hats"
        android:textColor="@color/black"
        android:textSize="42dp" />

    <ImageButton
        android:id="@+id/addItem"
        android:layout_width="67dp"
        android:layout_height="57dp"
        android:layout_marginLeft="340dp"
        android:background="#00FFFFFF"
        android:scaleX="1.4"
        android:scaleY="1.4"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="#000000" />

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:scaleX="1.2"
        android:scaleY="1.1"
        app:srcCompat="?attr/homeAsUpIndicator"
        app:tint="#000000" />

</RelativeLayout>